<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>

  <!-- Bootstrap + site CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/style.css">

  <!-- TinyMCE -->
  <script src="https://cdn.tiny.cloud/1/2qi8l61sxju7az0bhii0rvgzl25m8n98shpul3z6q4q4r9f5/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

  <style>
    #contentMarkdown, #preview {
      min-height: 400px;
      height: 400px;
      overflow-y: auto;
    }
    #contentMarkdown {
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 12px;
    }
    #preview {
      background: #fff;
      border: 1px solid #ccc;
      border-radius: 6px;
      padding: 12px;
      word-wrap: break-word;
    }
    .mode-toggle {
      display: inline-flex;
      align-items: center;
      background: #f1f1f1;
      border: 1px solid #ccc;
      border-radius: 50px;
      overflow: hidden;
      cursor: pointer;
      user-select: none;
    }
    .mode-option {
      padding: 6px 16px;
      font-weight: 600;
      transition: 0.3s;
    }
    .mode-option.active {
      background: #0d6efd;
      color: white;
    }
  </style>
</head>
<body>
<%- include('partials/nav') %>

<div class="container mt-4">
  <h1>Create Blog</h1>

  <!-- Toggle switch -->
  <div class="mb-3 mode-toggle" id="toggleMode">
    <div class="mode-option active" data-mode="markdown">Markdown</div>
    <div class="mode-option" data-mode="wysiwyg">Editor</div>
  </div>

  <form action="/blogs" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label>Title</label>
      <input type="text" name="title" id="blogTitleInput" class="form-control" required>
    </div>

    <!-- AI Suggestions -->
    <div class="mb-3">
      <button type="button" id="generateSuggestionsBtn" class="btn btn-secondary btn-sm mb-2">
        Generate Topic Ideas
      </button>
      <div id="suggestionsBox" class="border rounded p-2 text-break" 
           style="white-space: pre-wrap; min-height: 80px; font-size:0.9rem; color:#555;">
        AI-generated suggestions will appear here...
      </div>
    </div>

    <div class="mb-3">
      <label>Description</label>
      <textarea name="description" class="form-control"></textarea>
    </div>

    <!-- Markdown area -->
    <div id="markdownArea">
      <div class="row g-3">
        <div class="col-md-6 d-flex flex-column">
          <label>Content (Markdown)</label>
          <textarea id="contentMarkdown" name="content" class="form-control flex-grow-1"
            placeholder="# Heading 1
## Heading 2
**bold** and *italic*
> blockquote
[link](https://example.com)
- bullet point
1. numbered point"></textarea>
        </div>
        <div class="col-md-6 d-flex flex-column">
          <label>Live Preview</label>
          <div id="preview" class="flex-grow-1"></div>
        </div>
      </div>
    </div>

    <!-- WYSIWYG area -->
    <div id="wysiwygArea" style="display:none;">
      <textarea id="contentWYSIWYG"></textarea>
    </div>

    <div class="mb-3 mt-3">
      <label>Category</label>
      <select name="category" class="form-select">
        <% categories.forEach(c => { %>
          <option value="<%= c._id %>"><%= c.name %></option>
        <% }) %>
      </select>
    </div>

    <div class="mb-3">
      <label>Cover Image</label>
      <input type="file" name="coverImage" class="form-control">
    </div>

    <div class="mb-3">
      <label>Tags</label>
      <input type="text" name="tags" class="form-control" placeholder="e.g. editor-pick, tech">
    </div>

    <div class="mb-3">
      <label>Visibility</label>
      <select name="published" class="form-select">
        <option value="true" selected>Public</option>
        <option value="false">Private</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Blog</button>
  </form>
</div>

<%- include('partials/footer') %>
<script src="https://cdn.jsdelivr.net/npm/markdown-it/dist/markdown-it.min.js"></script>
<script src="/js/blogEditor.js"></script>

<script>
  const md = window.markdownit({ breaks: true });
  const toggleWrapper = document.getElementById('toggleMode');
  const toggleOptions = toggleWrapper.querySelectorAll('.mode-option');
  const markdownArea = document.getElementById('markdownArea');
  const wysiwygArea = document.getElementById('wysiwygArea');
  const contentMarkdown = document.getElementById('contentMarkdown');
  const wysiText = document.getElementById('contentWYSIWYG');
  const previewDiv = document.getElementById('preview');
  let editorActive = false;

  function updatePreview() {
    previewDiv.innerHTML = md.render(contentMarkdown.value);
  }
  contentMarkdown.addEventListener('input', updatePreview);
  updatePreview();

  toggleOptions.forEach(opt => {
    opt.addEventListener('click', () => {
      toggleOptions.forEach(o => o.classList.remove('active'));
      opt.classList.add('active');
      const mode = opt.dataset.mode;
      if (mode === 'wysiwyg') {
        wysiText.value = contentMarkdown.value;
        markdownArea.style.display = 'none';
        wysiwygArea.style.display = 'block';
        setTimeout(() => {
          tinymce.init({
            selector: '#contentWYSIWYG',
            height: 400,
            menubar: true,
            plugins: 'link lists code table',
            toolbar: 'undo redo | styles | bold italic underline | bullist numlist | link | code',
          });
        }, 50);
        editorActive = true;
      } else {
        if (editorActive) {
          contentMarkdown.value = tinymce.get('contentWYSIWYG').getContent();
          tinymce.remove();
          editorActive = false;
        }
        wysiwygArea.style.display = 'none';
        markdownArea.style.display = 'block';
        updatePreview();
      }
    });
  });
</script>
</body>
</html>
