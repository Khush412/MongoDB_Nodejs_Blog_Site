<!DOCTYPE html>
<html lang="en">
<head>
  <title>Verify Email</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <style>
    body {
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Inter', sans-serif;
    }

    .verify-wrapper {
      background: rgba(255, 255, 255, 0.12);
      backdrop-filter: blur(15px);
      -webkit-backdrop-filter: blur(15px);
      border-radius: 20px;
      padding: 35px;
      width: 100%;
      max-width: 420px;
      color: white;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      animation: fadeInUp 0.7s ease forwards;
      transform: translateY(30px);
      opacity: 0;
    }

    @keyframes fadeInUp {
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .verify-wrapper h2 {
      font-weight: 700;
      margin-bottom: 10px;
    }

    .verify-wrapper p {
      font-size: 0.97rem;
      opacity: 0.85;
      margin-bottom: 20px;
    }

    .code-input {
      text-align: center;
      letter-spacing: 6px;
      font-size: 1.4rem;
      border-radius: 12px;
      padding: 12px;
      border: none;
      outline: none;
      transition: all 0.3s ease;
    }

    .code-input:focus {
      transform: scale(1.03);
      box-shadow: 0 0 0 3px rgba(255,255,255,0.4);
    }

    .btn-primary {
      border-radius: 12px;
      font-weight: 600;
      padding: 10px;
      transition: all 0.3s ease;
      background: linear-gradient(135deg, #6366f1, #3b82f6);
      border: none;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      background: linear-gradient(135deg, #3b82f6, #6366f1);
      box-shadow: 0 6px 14px rgba(0,0,0,0.2);
    }

    .btn-link {
      color: #cbd5e1;
      font-size: 0.9rem;
      transition: color 0.3s ease;
    }

    .btn-link:hover {
      color: white;
      text-decoration: none;
    }

    .alert {
      font-size: 0.9rem;
      border-radius: 8px;
      padding: 8px 12px;
      animation: fadeIn 0.5s ease both;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-5px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .resend-tip {
      font-size: 0.85rem;
      opacity: 0.8;
      margin-top: 4px;
    }
  </style>
</head>
<body>

  <div class="verify-wrapper">
    <h2>Email Verification</h2>
    <p>A 6â€‘digit code has been sent to your email. Please enter it below to verify your account.</p>

    <% if (error && error.length) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if (success && success.length) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (info && info.length) { %>
      <div class="alert alert-info"><%= info %></div>
    <% } %>

    <form action="/verify-email" method="POST" class="mb-3">
      <input type="text" name="code" maxlength="6" minlength="6"
             class="form-control code-input mb-3"
             placeholder="Enter Code" required autofocus>
      <button type="submit" class="btn btn-primary w-100">Verify</button>
    </form>

    <form action="/resend-code" method="POST" id="resendForm">
      <button id="resendBtn" type="submit" class="btn btn-link">Resend Code</button>
      <div class="resend-tip" id="resendTip"></div>
    </form>
  </div>

  <script>
    // Cooldown logic
    let cooldown = 120;
    let btn = document.getElementById('resendBtn');
    let tip = document.getElementById('resendTip');
    let last = sessionStorage.getItem('resend_last');
    let left = 0;

    function updateBtn() {
      if (left > 0) {
        btn.disabled = true;
        btn.style.opacity = '0.6';
        tip.textContent = `You can resend in ${left}s`;
      } else {
        btn.disabled = false;
        btn.style.opacity = '1';
        tip.textContent = '';
      }
    }

    function countdown() {
      if (left > 0) {
        left--;
        updateBtn();
        setTimeout(countdown, 1000);
      }
    }

    if (last) {
      const elapsed = Math.floor((Date.now() - parseInt(last)) / 1000);
      if (elapsed < cooldown) {
        left = cooldown - elapsed;
        updateBtn();
        countdown();
      }
    }

    document.getElementById('resendForm').onsubmit = () => {
      sessionStorage.setItem('resend_last', Date.now());
      left = cooldown;
      updateBtn();
      countdown();
    };
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
