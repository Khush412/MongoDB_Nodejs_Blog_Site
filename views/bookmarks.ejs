<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>
    <%= title %>
  </title>
  <link rel="icon" type="image/png" href="/images/Site-icon.png" />
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    html,
    body {
      height: 100%;
      margin: 0;
    }

    body {
      display: flex;
      flex-direction: column;
    }

    main {
      flex: 1;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/nav') %>

    <!-- Main Content -->
    <main>
      <div class="container my-5">
        <h1 class="mb-4">My Bookmarked Blogs</h1>

        <% if (bookmarks.length> 0) { %>
          <div class="row">
            <% bookmarks.forEach(blog=> { %>
              <div class="col-md-4 mb-4">
                <%- include('partials/blogCard', { blog, user }) %>
              </div>
              <% }) %>
          </div>
          <% } else { %>
            <p class="text-muted">
              You have no bookmarks yet. Start adding some from any blog page ðŸ“‘
            </p>
            <% } %>
      </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

      <!-- Bookmark AJAX handler -->
      <script src="/js/bookmarks.js"></script>
</body>

</html>