<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Visual cue for clickability */
    .blog-card { cursor: pointer; }
  </style>
</head>
<body>

<%- include('partials/nav') %>

<div class="container py-4" style="max-width: 1100px;">
  
  <% if (query && query.trim().length > 0) { %>
    <h2 class="mb-4">Showing results for "<%= query %>"</h2>
  <% } else { %>
    <h2 class="mb-4">All Search Results</h2>
  <% } %>

  <% if (searchResults.length > 0) { %>
    <div class="row g-4">
      <% searchResults.forEach(blog => { %>
        <!-- d-flex on col + h-100 on card ensures even heights -->
        <div class="col-md-4 d-flex">
          <div class="blog-card card h-100 shadow-sm" data-url="/blog/<%= blog._id %>">
            <%- include('partials/blogCard', { blog, user }) %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="mt-4">No results found for "<%= query %>".</p>
  <% } %>

</div>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Make whole card clickable except for interactive UI elements
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.blog-card').forEach(card => {
      card.addEventListener('click', function(e) {
        if (!e.target.closest('a') && !e.target.closest('button') && !e.target.closest('form')) {
          window.location.href = this.dataset.url;
        }
      });
    });
  });
</script>

</body>
</html>
